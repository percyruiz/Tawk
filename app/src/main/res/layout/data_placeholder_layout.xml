<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="@color/teal_700"
        android:id="@+id/avatar_ph"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:background="@color/teal_700"
        android:id="@+id/followers_ph"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="end"
        tools:text="followers:"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintEnd_toStartOf="@+id/followersNo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_ph" />

    <TextView
        android:background="@color/teal_700"
        android:id="@+id/followersNo_ph"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="104dp"
        tools:text="12"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintEnd_toStartOf="@+id/following"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/followers_ph"
        app:layout_constraintTop_toBottomOf="@id/avatar_ph" />


    <TextView
        android:background="@color/teal_700"
        android:id="@+id/followingNo_ph"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        tools:text="34"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/following_ph"
        app:layout_constraintTop_toBottomOf="@id/avatar_ph" />


    <TextView
        android:background="@color/teal_700"
        android:id="@+id/following_ph"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="end"
        tools:text="followers:"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintEnd_toStartOf="@+id/followingNo_ph"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/followersNo_ph"
        app:layout_constraintTop_toBottomOf="@id/avatar_ph" />

    <TextView
        android:background="@color/teal_700"
        android:id="@+id/nameLabel_ph"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        tools:text="name:"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/followers_ph" />

    <TextView
        android:background="@color/teal_700"
        android:id="@+id/name_ph"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintLeft_toRightOf="@id/nameLabel_ph"
        app:layout_constraintTop_toBottomOf="@id/followers_ph"
        tools:text="Percival" />

    <TextView
        android:background="@color/teal_700"
        android:id="@+id/companyLabel_ph"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        tools:text="company:"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameLabel_ph" />

    <TextView
        android:background="@color/teal_700"
        android:id="@+id/company_ph"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintLeft_toRightOf="@id/companyLabel_ph"
        app:layout_constraintTop_toBottomOf="@id/nameLabel_ph"
        tools:text="Tawk.io" />

    <TextView
        android:background="@color/teal_700"
        android:id="@+id/blogLabel_ph"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        tools:text="blog:"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/companyLabel_ph" />

    <TextView
        android:background="@color/teal_700"
        android:id="@+id/blog_ph"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintLeft_toRightOf="@id/blogLabel_ph"
        app:layout_constraintTop_toBottomOf="@id/companyLabel_ph"
        tools:text="http://something.com" />

    <TextView
        android:background="@color/teal_700"
        android:id="@+id/notesLabel_ph"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        tools:text="Notes:"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blogLabel_ph" />

    <com.google.android.material.textfield.TextInputLayout
        android:background="@color/teal_700"
        android:id="@+id/notes_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/notesLabel_ph">

        <EditText
            android:background="@color/teal_700"
            android:id="@+id/notes_ph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="10"
            tools:text="name here" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>